{
  "name": "@unicrow/indexer-api",
  "description": "unicrow listener events from unicrow-contract and store it on hasura postgres",
  "version": "0.0.0",
  "author": "Unicrow Team <hi@unicrow.com>",
  "license": "MIT",
  "main": "api/index.ts",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "start:dev": "tsup --onSuccess \"pnpm start\"",
    "dev": "tsup --watch --onSuccess \"pnpm start\"",
    "build": "tsup"
  },
  "dependencies": {
    "@sentry/node": "7.23.0",
    "bignumber.js": "^9.1.1",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "graphql": "^16.6.0",
    "graphql-playground-middleware": "^1.1.2",
    "graphql-request": "^5.0.0",
    "koa": "2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-convert": "^2.0.0",
    "koa-cors": "^0.0.16",
    "koa-graphql": "^0.12.0",
    "koa-router": "^12.0.0",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "pm2": "5.2.2"
  },
  "devDependencies": {
    "@types/koa": "2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-convert": "^1.2.4",
    "@types/koa-cors": "^0.0.2",
    "@types/koa-graphql": "^0.8.7",
    "@types/koa-router": "7.4.4",
    "@types/node": "^18.11.11",
    "@unicrow/contract-types": "ssh://git@github.com/unicrowio/contract-types",
    "babel-loader": "9.1.0",
    "tsup": "^6.5.0",
    "typescript": "4.9.3"
  },
  "lint-staged": {
    "./src/**/*.{ts,js}": [
