  "dependencies": {
    "@sentry/node": "7.17.3",
    "bignumber.js": "^9.0.1",
    "dotenv": "^10.0.0",
    "ethers": "^5.5.2",
    "graphql": "^16.4.0",
    "graphql-playground-middleware": "^1.1.2",
    "graphql-request": "^4.2.0",
    "koa": "2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-convert": "^2.0.0",
    "koa-cors": "^0.0.16",
    "koa-graphql": "^0.8.0",
    "koa-router": "10.0.0",
    "pino": "^7.6.3",
    "pino-pretty": "^7.3.0",
    "pm2": "5.2.2"
  },
  "devDependencies": {
    "@types/koa": "2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-convert": "^1.2.3",
    "@types/koa-cors": "^0.0.0",
    "@types/koa-graphql": "^0.8.4",
    "@types/koa-router": "7.4.2",
    "@types/node": "^17.0.0",
    "@unicrow/contract-types": "ssh://git@github.com/unicrowio/contract-types",
    "babel-loader": "8.2.2",
    "tsup": "^5.10.1",
    "typescript": "4.2.4"
  },
  "lint-staged": {
    "./src/**/*.{ts,js}": [
